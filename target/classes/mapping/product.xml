<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhanghao.first.dao.ProductDao">


	<resultMap id="Product" type="com.zhanghao.first.model.Product">
	<!-- column：数据库的列名，property：model中的变量名。 -->
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="price" property="price" />
		<result column="state" property="state" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="desc" property="desc" />
		<result column="product_id" property="productId" />
	</resultMap>
	<!-- 通用的一个sql字段。 -->
	<sql id="Base_Column_List">
		id,
		name,
		price,
		state,
		create_time,
		update_time,
		`desc`,
		product_id
	</sql>
	
	
	<!-- 下面的select/insert 等等的 id 是 dao层的接口名。 要一一对应。 -->
	
	<select id="selectByPrimaryKey" resultMap="Product"
		parameterType="java.lang.Long">
		SELECT
		<include refid="Base_Column_List" />
		FROM product
		WHERE id = #{id}
	</select>
	<insert id="insert" parameterType="com.zhanghao.first.model.Product">
		INSERT INTO product
		(
		id,
		name,
		price,
		state,
		create_time,
		update_time,
		`desc`,
		product_id
		)
		VALUES
		(
		#{id},
		#{name},
		#{price},
		#{state},
		#{createTime},
		#{updateTime},
		#{desc},
		#{productId}
		)
		<selectKey keyProperty="id" resultType="Long" order="AFTER">
			select LAST_INSERT_ID()
		</selectKey>
	</insert>
	<select id="list" resultMap="Product">
		SELECT
		<include refid="Base_Column_List" />
		from product
		where 1=1
		<if test="price != null">
			and price = #{price}
		</if>
		<if test="state != null">
			and state = #{state}
		</if>
	</select>
</mapper>